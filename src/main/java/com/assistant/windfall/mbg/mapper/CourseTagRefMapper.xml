<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.Course//DTD Mapper 3.0//EN" "http://mybatis.Course/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.assistant.windfall.mbg.mapper.CourseTagRefMapper">
    <resultMap id="CourseTagRefDao" type="com.assistant.windfall.dao.CourseTagRefDao">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="courseId" property="courseId" jdbcType="INTEGER"/>
        <result column="tagId" property="tagId" jdbcType="INTEGER"/>
    </resultMap>

    <select id="obtainCourseTagRefById" resultMap="CourseTagRefDao">
        SELECT id, courseId, tagId
        FROM CourseTagRef
        WHERE id = #{id}
    </select>

    <insert id="insertCourseTagRef"
            parameterType="com.assistant.windfall.dao.CourseTagRefDao"
            flushCache="true"
            statementType="PREPARED"
            keyProperty="id"
            useGeneratedKeys="true"
            timeout="20">
        INSERT INTO CourseTagRef(courseId, tagId)
        VALUES(#{courseId}, #{tagId})
    </insert>

    <select id="listCourseTagRef" resultMap="CourseTagRefDao">
        SELECT id, courseId, tagId
        FROM CourseTagRef
        where orgId = #{orgId}
    </select>
</mapper>
