<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.assistant.windfall.mbg.mapper.UserMapper">
    <resultMap id="UserDao" type="com.assistant.windfall.dao.UserDao">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="selectUser" resultMap="UserDao">
        SELECT id, name, password
        FROM MyUser
        WHERE id = #{id}
    </select>

    <insert id="insertUser"
            parameterType="com.assistant.windfall.dao.UserDao"
            flushCache="true"
            statementType="PREPARED"
            keyProperty="id"
            useGeneratedKeys="true"
            timeout="20">
        INSERT INTO MyUser(name, password) VALUES(#{name}, #{password})
    </insert>
</mapper>