<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.Course//DTD Mapper 3.0//EN" "http://mybatis.Course/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.assistant.windfall.mbg.mapper.CourseMapper">
    <resultMap id="CourseDao" type="com.assistant.windfall.dao.CourseDao">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="description" property="description" jdbcType="VARCHAR"/>
        <result column="orgId" property="orgId" jdbcType="INTEGER"/>
        <result column="img" property="img" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="INTEGER"/>
    </resultMap>

    <select id="obtainCourseById" resultMap="CourseDao">
        SELECT id, name, description, orgId, img, status
        FROM Course
        WHERE id = #{id}
    </select>

    <insert id="insertCourse"
            parameterType="com.assistant.windfall.dao.CourseDao"
            flushCache="true"
            statementType="PREPARED"
            keyProperty="id"
            useGeneratedKeys="true"
            timeout="20">
        INSERT INTO Course(name, description, orgId, img, status)
        VALUES(#{name}, #{description}, #{orgId}, #{img}, #{status})
    </insert>

    <select id="listCourse" resultMap="CourseDao">
        SELECT id, name, description, orgId, img, status
        FROM Course
    </select>
</mapper>
