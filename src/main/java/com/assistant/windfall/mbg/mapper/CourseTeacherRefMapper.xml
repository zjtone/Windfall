<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.Course//DTD Mapper 3.0//EN" "http://mybatis.Course/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.assistant.windfall.mbg.mapper.CourseTeacherRefMapper">
    <resultMap id="CourseTeacherRefDao" type="com.assistant.windfall.dao.CourseTeacherRefDao">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="courseId" property="courseId" jdbcType="INTEGER"/>
        <result column="tagId" property="tagId" jdbcType="INTEGER"/>
    </resultMap>

    <select id="obtainCourseTeacherRefById" resultMap="CourseTeacherRefDao">
        SELECT id, courseId, tagId
        FROM CourseTeacherRef
        WHERE id = #{id}
    </select>

    <insert id="insertCourseTeacherRef"
            parameterType="com.assistant.windfall.dao.CourseTeacherRefDao"
            flushCache="true"
            statementType="PREPARED"
            keyProperty="id"
            useGeneratedKeys="true"
            timeout="20">
        INSERT INTO CourseTeacherRef(courseId, tagId)
        VALUES(#{courseId}, #{tagId})
    </insert>

    <select id="listCourseTeacherRef" resultMap="CourseTeacherRefDao">
        SELECT id, courseId, tagId
        FROM CourseTeacherRef
        where orgId = #{orgId}
    </select>
</mapper>
